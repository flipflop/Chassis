     ok($("*[data-component-name='message-area']")[2],"Component: message-area (3) present");
     ok($("*[data-component-name='checkout-products']")[0],"Component: checkout-products present");
     ok($("*[data-component-name='checkout-promo-code']")[0],"Component: checkout-promo-code present");
